<%= form_with(model: group) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation" data-turbo-cache="false">
      <h3>
        <%= I18n.t("errors.messages.not_saved",
                     count: group.errors.count,
                     resource: group.class.model_name.human.downcase)
        %>
      </h3>
      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :user_admin_id, style: "display: none" %>
    <%= form.text_field :user_admin_id, value: current_admin.id, style: "display: none" %>
  </div>
  <div class="actions mt-1">
    <%= form.submit class: "btn green" %>
  </div>
<% end %>
