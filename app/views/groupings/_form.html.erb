<%= form_with(model: grouping) do |form| %>
  <% if grouping.errors.any? %>
    <div id="error_explanation" data-turbo-cache="false">
      <h3>
        <%= I18n.t("errors.messages.not_saved",
                    count: grouping.errors.count,
                    resource: grouping.class.model_name.human.downcase)
        %>
      </h3>
      <ul>
        <% grouping.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div class="field hidden">
    <%= form.label :user_admin_id %>
    <%= form.text_field :user_admin_id, value: current_admin.id %>
  </div>
  <div class="actions mt-1">
    <%= form.submit class: "btn green" %>
  </div>
<% end %>
