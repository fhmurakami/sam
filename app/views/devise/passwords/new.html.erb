<main class="background">
  <div class="blur">
    <%= render 'shared/header' %>
    <div class="panel form">
      <h2><%= t "devise.passwords.forgot_password?" %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="actions mt-1">
          <%= f.submit t("helpers.submit.reset_password_instructions"), class: "send-password" %>
        </div>
      <% end %>
      <div class="actions">
        <%- if controller_name != 'sessions' %>
          <%= link_to t("devise.sessions.log_in"), new_session_path(resource_name), class: "btn blue" %>
        <% end %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to t("devise.registrations.sign_up"), new_registration_path(resource_name), class: "btn green" %>
        <% end %>
      </div>
    </div>
  </div>
</main>
