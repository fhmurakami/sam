<%- if controller_name != 'sessions' %>
  <%= link_to t("devise.sessions.log_in"), new_session_path(resource_name), class: "btn blue" %><br />
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("devise.registrations.sign_up"), new_registration_path(resource_name), class: "btn" %><br />
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("devise.passwords.forgot_password?"), new_password_path(resource_name), class: "forgot-password" %><br />
<% end %>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("devise.failure.confimation_instructions_not_received?"), new_confirmation_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t("devise.failure.unlock_instructions_not_received?"), new_unlock_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to t("devise.sessions.omniauth.sign_in", provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
